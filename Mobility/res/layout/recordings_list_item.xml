<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation = "horizontal" >
    <ImageView 
        android:id = "@+id/transport_icon"
        android:layout_width = "40dp"
        android:layout_height = "40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight = "5dp"
        android:layout_marginTop = "15dp"
        android:layout_marginBottom = "15dp"
        />
    <LinearLayout 
        android:layout_width = "fill_parent"
        android:layout_height = "70dp"
        android:orientation="vertical">  
        <TextView 
            android:id = "@+id/recording_title"
            android:layout_width="match_parent"
            android:layout_height = "30dp"
            android:textSize="22sp"
            android:text = "title"
            android:layout_gravity="bottom|left"/>
		
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height = "20dp"
            android:orientation="horizontal">
            <TextView 
                android:id = "@+id/recording_duration"
                android:layout_width = "0dp"
                android:layout_weight = "0.4"
                android:layout_height = "match_parent"
                android:layout_gravity = "bottom"
                android:text = "1hr 36 min"
                android:textSize = "12sp"
                android:textColor = "#999"/>
            <TextView 
                android:id = "@+id/recording_speed"
                android:layout_width = "0dp"
                android:layout_weight = "0.3"
                android:layout_height = "match_parent"
                android:layout_gravity = "bottom"
                android:text = "20km/h"
                android:textColor = "#999"
                android:textSize = "12sp"/>
            <TextView 
                android:id="@+id/recording_distance"
                android:layout_width = "0dp"
                android:layout_weight = "0.3"
                android:layout_height = "match_parent"
                android:layout_gravity = "bottom|right"
                android:text = "7.7km"
                android:textSize = "12sp"
                android:textColor= "#999"/>
        </LinearLayout>
            <TextView 
            android:id = "@+id/recording_date"
            android:layout_width = "match_parent"
            android:layout_height = "20dp"
            android:textSize = "12sp"
            android:text="21 Jan"
            android:textColor = "#999"/>
      
    </LinearLayout>
</LinearLayout>